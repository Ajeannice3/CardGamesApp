@page
@model CardGames.Pages.RegisterModel

@{
    ViewData["Title"] = "Register";
    ViewData["message"] = Request.Query["dupMessage"];
}


<div class="text-center">
    <div class="body-container">
        <div class="index-background">
            
            <form method="post">
                <div id="divRegisterForm" class="login-register-forms">
                    <h1>Register</h1><h3 style="color:red;"> @ViewData["message"] </h3>
                    <div class="form-group">
                        <label asp-for="Player.PlayerName" class="form-label">Player Name</label>
                        <input asp-for="Player.PlayerName" class="form-control" />
                        <span asp-validation-for="Player.PlayerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Player.ScreenName" class="form-label">Screen Name</label>
                        <input asp-for="Player.ScreenName" class="form-control" />
                        <span asp-validation-for="Player.ScreenName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Player.Password" class="form-label">Password</label>
                        <input asp-for="Player.Password" class="form-control" />
                        <span asp-validation-for="Player.Password" class="text-danger"></span>
                    </div>
                    <input class="btn login-register-btns" type="submit" value="Register" />
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
