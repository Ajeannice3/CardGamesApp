@page
@model CardGames.Pages.Blackjack.MultiPlayerModel

@{
    ViewData["Title"] = "MultiPlayer";
}

<h1>MultiPlayer</h1>

<h4>Scores</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Scores.GameType" class="control-label"></label>
                <input asp-for="Scores.GameType" class="form-control" />
                <span asp-validation-for="Scores.GameType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scores.PlayerID" class="control-label"></label>
                <input asp-for="Scores.PlayerID" class="form-control" />
                <span asp-validation-for="Scores.PlayerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scores.Winnings" class="control-label"></label>
                <input asp-for="Scores.Winnings" class="form-control" />
                <span asp-validation-for="Scores.Winnings" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scores.Losses" class="control-label"></label>
                <input asp-for="Scores.Losses" class="form-control" />
                <span asp-validation-for="Scores.Losses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scores.GameScore" class="control-label"></label>
                <input asp-for="Scores.GameScore" class="form-control" />
                <span asp-validation-for="Scores.GameScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
