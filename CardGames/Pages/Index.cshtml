@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    ViewData["status"] = Request.Query["loginStatus"];
}

<div class="text-center">
    <div class="body-container">
        <div class="index-background">
            <form method="post" enctype="multipart/form-data">
                
                <div id="loginForm" class="login-register-forms">
                    <h1>Login</h1><h3 style="color:red;"> @ViewData["status"] </h3>
                    <div class="form-group">
                        <label asp-for="Player.ScreenName" class="form-label">Screen Name</label>
                        <input asp-for="Player.ScreenName" class="form-control"   />
                        <span asp-validation-for="Player.ScreenName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Player.Password" class="form-label">Password</label>
                        <input asp-for="Player.Password" class="form-control"/>
                        <span asp-validation-for="Player.Password" class="text-danger"></span>
                    </div>
                    <input class="btn login-register-btns" type="submit" value="Login" />
                    <a class="btn login-register-btns" asp-page="/Register" >Register</a>
                </div>
            </form>
        </div>
    </div>
</div>
